@using CsvProject.Models
@model IEnumerable<UploadFileModel>
@{
    ViewBag.Title = "Csv File";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/knockout-3.4.2.js"></script>
    <script src="~/Scripts/knockout-3.4.2.debug.js"></script>
    <link href="~/Content/CustomStyle.css" rel="stylesheet" />
    <link href="~/Content/Custom.css" rel="stylesheet" />
}

<div id="body">
    <h2>Uploading Csv File</h2>
    <hr />
    <br />
    <div style="border-top: solid 2px #282828; width: 430px; height: 10px"> </div>

    <div data-bind="ifnot: Calculator()">
        <div>
            <h2>Upload your Csv file here</h2>
        </div>
        <br />
        <div>
            @using (Html.BeginForm("Index", "UploadFile", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="file" name="postedFile" />
                <input type="submit" value="Import" />
            }          
        </div>

        <div>
            @if (Model.Count() > 0)
            {
                <hr />
                <table cellpadding="0" cellspacing="0">
                    <tr>
                        <th>Read Values From the File</th>
                    </tr>
                    @foreach (UploadFileModel readFile in Model)
                    {
                        <tr>
                            <td>@readFile.ReadValues</td>
                        </tr>
                    }
                </table>
            }
        </div>
    </div>
</div>
